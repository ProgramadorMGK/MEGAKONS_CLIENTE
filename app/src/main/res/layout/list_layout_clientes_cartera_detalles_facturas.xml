<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardElevation="4dp"
    android:padding="@dimen/_1sdp"
    >

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/graylight3"
        android:stretchColumns="1,2,3,4">

        <TableRow>

            <TextView
                android:id="@+id/tvCodigo"
                android:layout_width="@dimen/_1sdp"
                android:layout_height="match_parent"
                android:text="CÃ³digo"
                android:gravity="center"
                android:background="@color/white"
                android:textColor="@color/black"
                android:textSize="@dimen/_6sdp"
                android:fontFamily="@font/amethysta"
                android:layout_column="1"
                android:layout_marginVertical="1dp"
                android:layout_marginHorizontal="1dp"
                />

            <TextView
                android:id="@+id/tvNombre"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="match_parent"
                android:text="Nombre"
                android:gravity="center"
                android:background="@color/white"
                android:textColor="@color/black"
                android:textSize="@dimen/_6sdp"
                android:fontFamily="@font/amethysta"
                android:layout_column="2"
                android:layout_marginVertical="1dp"
                android:layout_marginRight="1dp"
                />

            <TextView
                android:id="@+id/tvCantidad"
                android:layout_width="@dimen/_1sdp"
                android:layout_height="match_parent"
                android:text="Cantidad"
                android:gravity="center"
                android:background="@color/white"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="@dimen/_8sdp"
                android:fontFamily="@font/amethysta"
                android:layout_column="3"
                android:layout_marginVertical="1dp"
                android:layout_marginRight="1dp"
                />

            <TextView
                android:id="@+id/tvPrecioUnitario"
                android:layout_width="@dimen/_1sdp"
                android:layout_height="match_parent"
                android:text="P Unitario"
                android:gravity="center"
                android:background="@color/white"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:textSize="@dimen/_8sdp"
                android:fontFamily="@font/amethysta"
                android:layout_column="4"
                android:layout_marginVertical="1dp"
                android:layout_marginRight="1dp"
                />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:layout_marginRight="1dp"
                >

                <TextView
                    android:id="@+id/tvPorcentajeDescuento"
                    android:layout_width="@dimen/_42sdp"
                    android:layout_height="match_parent"
                    android:text="17,00 %"
                    android:background="@color/white"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_7sdp"
                    android:fontFamily="@font/amethysta"
                    android:layout_marginVertical="1dp"
                    />

                <TextView
                    android:id="@+id/tvDescuentoValor"
                    android:layout_width="@dimen/_42sdp"
                    android:layout_height="match_parent"
                    android:text="$ 20,57"
                    android:background="@color/white"
                    android:textAlignment="center"
                    android:textColor="@color/rojoMGK"
                    android:textSize="@dimen/_7sdp"
                    android:fontFamily="@font/amethysta"
                    android:layout_marginBottom="1dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:layout_marginRight="1dp"
                >

                <TextView
                    android:id="@+id/tvTotal"
                    android:layout_width="@dimen/_53sdp"
                    android:layout_height="match_parent"
                    android:text="$ 100,51"
                    android:background="@color/white"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_7sdp"
                    android:fontFamily="@font/amethysta"
                    android:textStyle="bold"
                    android:layout_marginVertical="1dp"
                    />

                <TextView
                    android:id="@+id/tvSubtotal"
                    android:layout_width="@dimen/_53sdp"
                    android:layout_height="match_parent"
                    android:text="$ 121,10"
                    android:background="@color/white"
                    android:textAlignment="center"
                    android:textColor="@color/rojoMGK"
                    android:textSize="@dimen/_7sdp"
                    android:fontFamily="@font/amethysta"
                    android:textStyle="bold"
                    android:layout_marginBottom="1dp"
                    />

            </LinearLayout>

        </TableRow>

    </TableLayout>


</androidx.cardview.widget.CardView>