                        <TextView
                            android:id="@+id/tvDiasFaltantesCCDetalleACH"
                            android:layout_width="140dp"
                            android:layout_height="25dp"
                            android:layout_alignParentStart="true"
                            android:layout_marginEnd="0dp"
