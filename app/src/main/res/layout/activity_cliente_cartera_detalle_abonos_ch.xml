                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="2dp"
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="2dp"
                            android:layout_toEndOf="@+id/cdd1"
                            android:background="@color/white">

                            <TextView
