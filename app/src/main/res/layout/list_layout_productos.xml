<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardElevation="4dp"
    card_view:cardUseCompatPadding="true"
    android:background="@color/graylight"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/productoInicial"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F1F1F1"
        >

        <ImageView
            android:id="@+id/imgProducto"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_margin="4dp"
            android:padding="5dp"
            android:src="@drawable/ayudarojo"

            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/poppins_r"
            android:text="Nombre Producto"
            android:textColor="@color/black"
            android:textSize="@dimen/_10sdp"
            android:textStyle="bold"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="0.0"
            card_view:layout_constraintStart_toEndOf="@+id/imgProducto"
            card_view:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvCodigo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:fontFamily="@font/amethysta"
            android:text="06TC.A50565S"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="0.0"
            card_view:layout_constraintStart_toEndOf="@+id/imgProducto"
            card_view:layout_constraintTop_toBottomOf="@+id/tvNombre" />

        <TextView
            android:id="@+id/tvCodigoAlterno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:fontFamily="@font/antic"
            android:text="C.A: 06TC.A50565S"
            android:textColor="@color/gray"
            android:textSize="14sp"
            android:textStyle="bold"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="0.0"
            card_view:layout_constraintStart_toEndOf="@+id/imgProducto"
            card_view:layout_constraintTop_toBottomOf="@+id/tvCodigo" />

        <TextView
            android:id="@+id/tvStock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:fontFamily="monospace"
            android:paddingBottom="2dp"
            tools:text="Existencia: 17585"
            android:textColor="@color/rojoMGK"
            android:textStyle="bold"
            android:textSize="16sp"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="0.0"
            card_view:layout_constraintStart_toEndOf="@+id/imgProducto"
            card_view:layout_constraintTop_toBottomOf="@+id/tvCodigoAlterno"
            android:visibility="invisible"
            />

        <TextView
            android:id="@+id/tvPvp"
            android:layout_width="100dp"
            android:layout_height="36dp"
            android:layout_margin="8dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/basic"
            android:gravity="right"
            android:text="$ 157.50"
            android:textColor="@color/black"
            android:textSize="27sp"
            android:textStyle="bold"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="0.9"
            card_view:layout_constraintStart_toEndOf="@+id/tvCodigo"
            card_view:layout_constraintTop_toBottomOf="@+id/tvNombre"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/preguntarArticuloWhatsapp"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:src="@drawable/chat"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toEndOf="@+id/tvCodigo"
            card_view:layout_constraintTop_toBottomOf="@+id/tvNombre"
            card_view:layout_constraintHorizontal_bias="0.9"
            android:layout_margin="8dp"
            android:layout_marginTop="8dp"
            android:background="@color/white"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>