<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardElevation="1dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1,2,3,4,5"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp">

            <TableRow
                android:background="@color/graylight"
                >
                <TextView
                    android:id="@+id/nppCodigoArticuloNP"
                    android:text="01.H541.51"
                    android:paddingRight="2dp"
                    android:paddingLeft="2dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:layout_column="1"
                    android:background="@color/white"
                    android:textColor="@color/black"
                    android:layout_margin="1dp"
                    android:textAlignment="center"
                    android:gravity="center_vertical"
                    tools:ignore="RtlCompat" />
                <TextView
                    android:id="@+id/nppNombreArticuloNP"
                    android:text="ARTICULO DE MEGAKONS S.A. - CONSTRUYENDO CONFIANZA"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:paddingRight="2dp"
                    android:paddingLeft="2dp"
                    android:inputType="textMultiLine"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:layout_column="2"
                    android:background="@color/white"
                    android:textColor="@color/black"
                    android:layout_margin="1dp"
                    android:textAlignment="center"
                    android:gravity="center_vertical"
                    tools:ignore="RtlCompat" />
                <TextView
                    android:id="@+id/nppCantidadNP"
                    android:text="1000,00"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:layout_column="3"
                    android:layout_margin="1dp"
                    android:background="@color/white"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:gravity="center_vertical"
                    tools:ignore="RtlCompat" />
                <TextView
                    android:id="@+id/nppCantidadPerdidaNP"
                    android:text="1000,00"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:layout_column="4"
                    android:layout_margin="1dp"
                    android:background="@color/white"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:gravity="center_vertical"
                    tools:ignore="RtlCompat" />

                <TextView
                    android:id="@+id/nppTotalVentaPerdidaNP"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_column="4"
                    android:layout_margin="1dp"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:text="100000,00"
                    android:paddingEnd="10dp"
                    android:textAlignment="textEnd"
                    android:textColor="@color/black"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    tools:ignore="RtlCompat" />
            </TableRow>

        </TableLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>