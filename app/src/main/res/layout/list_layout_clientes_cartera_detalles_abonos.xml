<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardElevation="4dp"
    card_view:cardUseCompatPadding="true"
    android:background="@color/graylight"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F1F1F1"
        >

        <ImageView
            android:id="@+id/imgTipoAbonoChequeABCH"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="4dp"
            android:padding="5dp"
            android:src="@drawable/abono_factura"

            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvDescripcionABCH"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="4dp"
            android:fontFamily="@font/poppins_r"
            android:text="EfectivizaciÃ³n CH/Post - FC#001003-156920;"
            android:inputType="textMultiLine"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="bold"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toEndOf="@+id/imgTipoAbonoChequeABCH"
            card_view:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvReferABCH"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/amethysta"
            android:text="CH#2827-PICH"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="4dp"
            android:textStyle="bold"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="0.0"
            card_view:layout_constraintStart_toEndOf="@+id/imgTipoAbonoChequeABCH"
            card_view:layout_constraintTop_toBottomOf="@+id/tvDescripcionABCH" />

        <TextView
            android:id="@+id/tvFechaABCH"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:fontFamily="@font/poppins_r"
            android:text="Fecha: 3/5/2021"
            android:textColor="@color/gray"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="4dp"
            android:textSize="14sp"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="0.0"
            card_view:layout_constraintStart_toEndOf="@+id/imgTipoAbonoChequeABCH"
            card_view:layout_constraintTop_toBottomOf="@+id/tvReferABCH" />

        <TextView
            android:id="@+id/tvValorABCH"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/basic"
            android:gravity="right"
            android:text="$ 1578.50"
            android:textColor="@color/black"
            android:textSize="27sp"
            android:textStyle="bold"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="0.9"
            card_view:layout_constraintStart_toEndOf="@+id/tvReferABCH"
            card_view:layout_constraintTop_toBottomOf="@+id/tvDescripcionABCH" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>